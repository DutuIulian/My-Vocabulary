<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp" />

        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp">

            <Button
                android:id="@+id/show"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Afișează răspuns"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/upvote"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/downvote"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-1"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp">

            <Button
                android:id="@+id/next"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Următorul"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/skip"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sari întrebarea"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp">

            <EditText
                android:id="@+id/markEdit"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="14dp"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Comentează"
                android:textAllCaps="false" />
        </LinearLayout>

        <TextView
            android:id="@+id/information"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="14dp"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/importExpr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importă expresii"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/importDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Importă o bază de date"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/exportDB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exportă o bază de date"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>